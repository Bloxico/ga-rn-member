{
  "rules": {
    "users": {
      "$uid": {
        "info": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "devices": {
          "$deviceId": {
            ".read": "$uid === auth.uid",
            "events": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            },
            "current_reward": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            },
            "sum_rewards": {
              ".read": "$uid === auth.uid",
              ".write": false
            },
            "claim_ios": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            }
          }
        }
      }
    },
    "rewards": {
      ".read": false,
      ".write": false
    },
    "pushKeys": {
      ".write": "newData.hasChildren([ 'pushToken' ])",
      ".read" : false
    }
  }
}
