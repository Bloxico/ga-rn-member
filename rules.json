{
  "rules": {
    "users": {
      "$uid": {
        "info": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "devices": {
          "$deviceId": {
            ".read": "$uid === auth.uid",
            "events": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            },
            "current_reward": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            },
            "sum_rewards": {
              ".read": "$uid === auth.uid",
              ".write": false
            },
            "last_insert_date": {
              ".read": false,
              ".write": false
            },
            "claim_ios": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            }
          }
        }
      }
    },
    "suspicious": {
      ".read": false,
      ".write": false
    },
    "partner": {
      ".read": false,
      ".write": false
    },
    "exchange_rate": {
      ".read": false,
      ".write": false
    },
    "pushKeys": {
      "$token": {
        ".write": "newData.hasChildren([ 'pushToken' ])",
        ".read" : false,
      }
    }
  }
}


